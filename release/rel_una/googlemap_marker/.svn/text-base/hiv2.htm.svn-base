<html>
<head>
  <script type='text/javascript' src='https://www.google.com/jsapi'></script>
  <script type='text/javascript'>
   google.load('visualization', '1', {'packages': ['geomap']});
   google.setOnLoadCallback(drawMap);

    function drawMap() {
      var data = google.visualization.arrayToDataTable([
        ['City', 'TweetPosts#'],      
['Jakarta',				93     ],
['Bandung',				26     ],
['Yogyakarta',		21     ],
['Bali				',		18   ],
['Makassar		',		18   ],
['Surabaya		',		18   ],
['Semarang		',		16   ],
['Medan				',		14   ],
['Bogor				',		13   ],
['Malang			',		10   ],
['Pontianak		',		7    ],
['Bekasi			',		7    ],
['Samarinda		',		6    ],
['Palembang		',		6    ],
['Padang			',		6    ],
['Tangerang		',		6    ],
['Jambi				',		5    ],
['Aceh				',		4    ],
['Lampung			',		4    ],
['Balikpapan	',		3    ],
['Banjarmasin	',		3    ],
['Depok				',		3    ],
['Central Java',		2    ],
['Cirebon			',		1    ],
['Manado			',		1    ],
['Sukabumi		',		1    ],
['Palu				',		1    ],
['Central Kalimantan',	1],
['South Sulawesi',		1  ],
['Batam',				1        ] 

  
        ]);

      var options = {};
       options['region'] = 'ID';
      options['colors'] = [0x00CC00, 0xFFFF00, 0xFF0000]; //orange colors
      //options['colors'] = [0x6600FF, 0x660066, 0x660000]; //orange colors
      options['dataMode'] = 'markers';
      options['datalessRegionColor'] = '0x6600FF';
      //options['dataMode'] = 'regions';
      options['width'] = '800px';
      options['height'] = '450px';
      options['showLegend'] = true;
      

      var container = document.getElementById('map_canvas');
      var geomap = new google.visualization.GeoMap(container);
      geomap.draw(data, options);
    };

  </script>
</head>


<body>
<P>Twitter Map Indonesian City Level Distribution for HIV/AIDS Topic at World AIDS Day (1st Dec 2013)</P>
    <div id='map_canvas'></div>
</body>

</html>